<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:id="@+id/vv_rl_container"
    android:background="@color/black"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/vv_img_bg"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <cn.dianedun.view.EZUIPlayer.EZUIPlayer
        android:id="@+id/vv_ezuiplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/vv_tv_tip"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/content_text_s14"
        android:visibility="gone"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/vv_ll_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/circle_graybg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/vv_img_realplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/play_video_record" />

        <TextView
            android:id="@+id/vv_tv_realplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="00:25"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_s12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/vv_img_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vv_ezuiplayer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/left_twinkle"
        android:scaleType="fitXY"
        android:visibility="gone" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent" >

        <cn.dianedun.view.PagesGallery
            android:id="@+id/realplay_pages_gallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:spacing="0dp" />

    </FrameLayout>

</RelativeLayout>
